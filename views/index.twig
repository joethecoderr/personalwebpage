            {% for job in jobs %}
            <div class = "row work-position">
              <div class = "col-2">
              <h5><img src={{job.image}} alt="" width = "110%" height = "110%"></h5>
              </div>
                <div class = "col">
                  <strong><h5>{{ job.title }} </strong></h5>
